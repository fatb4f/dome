{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "demo.pre_contract",
  "type": "object",
  "required": [
    "schema_version",
    "packet_id",
    "base_ref",
    "budgets",
    "actions",
    "plan_card"
  ],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "packet_id": {
      "type": "string",
      "minLength": 1
    },
    "component": {
      "type": "string"
    },
    "repo": {
      "type": "string"
    },
    "base_ref": {
      "type": "string",
      "minLength": 1
    },
    "mode": {
      "type": "string"
    },
    "budgets": {
      "type": "object",
      "required": [
        "iteration_budget"
      ],
      "properties": {
        "time_minutes": {
          "type": "integer",
          "minimum": 1
        },
        "iteration_budget": {
          "type": "integer",
          "minimum": 1
        }
      },
      "additionalProperties": true
    },
    "constraints": {
      "type": "object",
      "additionalProperties": true
    },
    "actions": {
      "type": "object",
      "properties": {
        "test": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            }
          ]
        }
      },
      "additionalProperties": true
    },
    "plan_card": {
      "type": "object",
      "required": [
        "why",
        "what"
      ],
      "properties": {
        "why": {
          "type": "string"
        },
        "what": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
