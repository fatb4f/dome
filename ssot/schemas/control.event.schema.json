{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "control.event",
  "type": "object",
  "required": [
    "schema_version",
    "sequence",
    "event_id",
    "ts",
    "topic",
    "run_id",
    "payload"
  ],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "sequence": {
      "type": "integer",
      "minimum": 1
    },
    "event_id": {
      "type": "string",
      "pattern": "^evt-[0-9a-f]{32}$"
    },
    "ts": {
      "type": "string",
      "minLength": 1
    },
    "topic": {
      "type": "string",
      "enum": [
        "plan.wave.created",
        "task.assigned",
        "task.result.raw",
        "task.result",
        "gate.requested",
        "gate.verdict",
        "promotion.decision"
      ]
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "payload": {
      "type": "object"
    }
  },
  "additionalProperties": false
}
