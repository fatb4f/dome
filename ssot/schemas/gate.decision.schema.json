{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "gate.decision",
  "type": "object",
  "required": [
    "version",
    "run_id",
    "task_id",
    "status",
    "reason_codes",
    "telemetry_ref"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "task_id": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": [
        "APPROVE",
        "REJECT",
        "NEEDS_HUMAN"
      ]
    },
    "substrate_status": {
      "type": "string",
      "enum": [
        "PROMOTE",
        "DENY",
        "STOP"
      ]
    },
    "reason_codes": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[A-Z]+(\\.[A-Z0-9_]+)+$"
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "risk_score": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "telemetry_ref": {
      "type": "object",
      "required": [
        "trace_id_hex",
        "span_id_hex"
      ],
      "properties": {
        "trace_id_hex": {
          "type": "string",
          "pattern": "^[0-9a-f]{32}$"
        },
        "span_id_hex": {
          "type": "string",
          "pattern": "^[0-9a-f]{16}$"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
