{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "pattern.catalog",
  "type": "object",
  "required": ["version", "source", "patterns"],
  "properties": {
    "version": {"type": "string"},
    "source": {
      "type": "object",
      "required": ["repo", "commit"],
      "properties": {
        "repo": {"type": "string"},
        "commit": {"type": "string"},
        "fetched_at": {"type": "string"}
      },
      "additionalProperties": true
    },
    "patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "category", "source_url"],
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "category": {"type": "string"},
          "source_url": {"type": "string"},
          "tags": {"type": "array", "items": {"type": "string"}}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
