{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "run.manifest",
  "type": "object",
  "required": [
    "version",
    "run_id",
    "inputs",
    "commands",
    "artifacts",
    "runtime"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "inputs": {
      "type": "object",
      "required": [
        "pre_contract_path",
        "pre_contract_sha256"
      ],
      "properties": {
        "pre_contract_path": {
          "type": "string"
        },
        "pre_contract_sha256": {
          "type": "string",
          "pattern": "^[0-9a-f]{64}$"
        }
      },
      "additionalProperties": true
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "runtime": {
      "type": "object",
      "required": [
        "python_version"
      ],
      "properties": {
        "python_version": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
