{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "run.manifest",
  "type": "object",
  "required": [
    "version",
    "run_id",
    "inputs",
    "commands",
    "artifacts",
    "runtime"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "inputs": {
      "type": "object",
      "required": [
        "pre_contract_path",
        "pre_contract_sha256"
      ],
      "properties": {
        "pre_contract_path": {
          "type": "string"
        },
        "pre_contract_sha256": {
          "type": "string",
          "pattern": "^[0-9a-f]{64}$"
        },
        "input_hashes": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "pattern": "^[0-9a-f]{64}$"
          }
        }
      },
      "additionalProperties": true
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "refs": {
      "type": "object",
      "properties": {
        "policy_ref": {
          "type": "string"
        },
        "pattern_ref": {
          "type": "string"
        },
        "packet_contract_ref": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "budgets": {
      "type": "object",
      "additionalProperties": true
    },
    "desired_state": {
      "type": "object",
      "additionalProperties": true
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "runtime": {
      "type": "object",
      "required": [
        "tool_versions"
      ],
      "properties": {
        "repo_commit_sha": {
          "type": "string"
        },
        "tool_versions": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
