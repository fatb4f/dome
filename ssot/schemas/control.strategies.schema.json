{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "control.strategies",
  "type": "object",
  "required": [
    "version",
    "ranking",
    "tie_breakers"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "ranking": {
      "type": "object",
      "additionalProperties": true
    },
    "tie_breakers": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "tool_preferences": {
      "type": "object",
      "additionalProperties": {
        "type": "number"
      }
    },
    "stop_thresholds": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}