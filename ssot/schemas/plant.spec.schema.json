{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "plant.spec",
  "type": "object",
  "required": [
    "version",
    "actions",
    "constraints",
    "obligations",
    "budgets"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "obligations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "budgets": {
      "type": "object",
      "properties": {
        "max_iterations": {
          "type": "integer",
          "minimum": 0
        },
        "max_attempts": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}