{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "work.queue",
  "type": "object",
  "required": [
    "artifact_kind",
    "version",
    "run_id",
    "base_ref",
    "max_workers",
    "tasks"
  ],
  "properties": {
    "artifact_kind": {
      "type": "string",
      "const": "dome.work.queue/v0.2"
    },
    "version": {
      "type": "string"
    },
    "policy_ref": {
      "type": "string"
    },
    "pattern_ref": {
      "type": "string"
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "base_ref": {
      "type": "string",
      "minLength": 1
    },
    "max_workers": {
      "type": "integer",
      "minimum": 1
    },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "task_id",
          "goal",
          "status"
        ],
        "properties": {
          "task_id": {
            "type": "string",
            "minLength": 1
          },
          "goal": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "enum": [
              "QUEUED",
              "CLAIMED",
              "RUNNING",
              "DONE",
              "BLOCKED"
            ]
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "worker_model": {
            "type": "string"
          },
          "policy_ref": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
